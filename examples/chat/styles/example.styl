html
  height: 100%
  //background-image: url('../images/dirt.png'), radial-gradient(ellipse 200% 100% at 50% 100%, back-color-1(), back-color-2())
  background-image: radial-gradient(ellipse 200% 100% at 50% 100%, back-color-1(), back-color-2())
  background-attachment: fixed
  font-family: sans-serif
  color: fore-color()
  text-shadow: 1px 1px 3px rgba(0,0,0,0.5)

.chat-window
  position: absolute
  // overflow: hidden
  // margin: 40px auto 0px auto
  margin: auto
  left: 10px
  right: 10px
  top: 10px
  bottom: 10px
  max-width: 480px
  max-height: 640px
  padding: 0px
  border: solid 2px fore-color(0.3)
  // box-shadow: 0px 0px 8px fore-color(0.5)

  .messages
    position:absolute
    line-height: 28px
    font-size: 20px
    top: 0px
    left: 0px
    right: 0px
    bottom: 30px
    overflow-y: scroll
    
    .message
      // font-family: 'VT323', monospace
      box-sizing: border-box   
      display: block
      width: 100%
      padding: 0px 4px
      margin: 0px
      background: back-color-2(0.1)
      color: fore-color()
      

  input.send-message
    position: absolute
    box-sizing: border-box   
    display: block
    bottom: 0px
    width: 100%
    padding: 0px 4px
    margin: 0px
    height: 28px
    background: back-color-2(0.5)
    border: none
    border-top: solid 2px fore-color(0.3)
    line-height: 28px
    font-size: 20px
    color: fore-color()



