@import 'nib'
html
  height: 100%
  //background-image: radial-gradient(ellipse 100% 100% at 50% 100%, rgba(32,32,48,1.0), rgba(0,0,0,1.0))
  //background-image: url('images/cat.jpg')
  //background-color: rgba(0,0,0,1.0)
  background-color: rgba(255,255,255,1.0)
  body
    margin: 0px

  #loader
    position: absolute
    width: 100%
    height: 64px
    top: 0px
    bottom: 0px
    left: 0px
    right: 0px
    margin: auto
    line-height: 64px
    font-size: 64px
    text-align: center
    color: rgba(222,222,222,1.0)
  
  #loader .dot
    animation: dotdotdot 3s ease-in-out infinite
    &:nth-child(2)
      animation-delay: 0.00s
    &:nth-child(3)
      animation-delay: 0.50s
    &:nth-child(4)
      animation-delay: 1.00s

@keyframes dotdotdot
  from
    opacity: 1.0
  33%
    opacity: 0.0
  66%
    opacity: 1.0
  to
    opacity: 1.0

